! Font
Xft.dpi:       96
Xft.antialias: true
Xft.hinting:   true
Xft.rgba:      rgb
Xft.autohint:  false
Xft.hintstyle: hintfull
Xft.lcdfilter: lcddefault

! Terminal
XTerm*background:        #282a36
XTerm*foreground:        #f8f8f2
XTerm*pointerColor:      #16a085
XTerm*faceName:          monospace
XTerm*faceSize:          13
XTerm*reverseVideo:      on
XTerm*selectToClipboard: true

! Color
*fading:                 8
*fadeColor:              black
*pointerColorBackground: #2b2c2b
*pointerColorForeground: #16a085

! Dracula theme
*.foreground:   #F8F8F2
*.background:   #282A36
*.cursorColor:  #C6C8D1
*.color0:       #000000
*.color8:       #4D4D4D
*.color1:       #FF5555
*.color9:       #FF6E67
*.color2:       #50FA7B
*.color10:      #5AF78E
*.color3:       #F1FA8C
*.color11:      #F4F99D
*.color4:       #BD93F9
*.color12:      #CAA9FA
*.color5:       #FF79C6
*.color13:      #FF92D0
*.color6:       #8BE9FD
*.color14:      #9AEDFE
*.color7:       #BFBFBF
*.color15:      #E6E6E6

Xcursor.theme: FlatbedCursors-Black
Xcursor.size:  0

! urxvt
URxvt.font: xft:Ricty:size=13,xft:MesloLGS Nerd Font:size=13,xft:Monospace:size=13
URxvt.depth:                32
URxvt.background:           [90]#080a16
URxvt*scrollBar:            false
URxvt*mouseWheelScrollPage: false
URxvt*cursorBlink:          true
URxvt*background:           #080a16
URxvt*foreground:           #f8f8f2
URxvt*cursorColor:          #c6c8d1
URxvt*saveLines:            5000
URxvt.iso14755:                   false
URxvt.keysym.Shift-Control-V:     eval:paste_clipboard
URxvt.keysym.Shift-Control-C:     eval:selection_to_clipboard
URxvt.keysym.Control-Left:        \033[1;5D
URxvt.keysym.Shift-Control-Left:  \033[1;6D
URxvt.keysym.Control-Right:       \033[1;5C
URxvt.keysym.Shift-Control-Right: \033[1;6C
URxvt.keysym.Control-Up:          \033[1;5A
URxvt.keysym.Shift-Control-Up:    \033[1;6A
URxvt.keysym.Control-Down:        \033[1;5B
URxvt.keysym.Shift-Control-Down:  \033[1;6B
URxvt*colorBD:                      #00b8e0
URxvt*colorIT:                      #e026a3
URxvt*colorUL:                      #29b582
URxvt*colorRV:                      #aa497e

